@model IEnumerable<MovieTheatre.Data.Session>

@{
    ViewData["Title"] = "List of Sessions";
}

<h2>List of Sessions</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.MovieId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Time)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
@foreach (var item in Model) {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.MovieId)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Time)
      </td>
      <td>
          <a asp-controller='Ticket' asp-action="Create" asp-route-id="@item.Id">Buy Ticket</a> |
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
      </td>
    </tr>
}
    </tbody>
</table>
